{
  // "image": "mcr.microsoft.com/vscode/devcontainers/rust:latest",
  "build": {
    "dockerfile": "./Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2.5.6": {
      "username": "vscode",
      "uid": 1000,
      "gid": 1000,
      "installZsh": false,
      "installOhMyZsh": false,
      "upgradePackages": true,
      "nonFreePackages": false
    },
    "ghcr.io/devcontainers/features/github-cli:1.0.14": {
      "version": "latest",
      "installDirectlyFromGitHubRelease": true
    },
    "ghcr.io/devcontainers/features/git:1.3.5": {
      "version": "latest",
      "ppa": false
    },
    "ghcr.io/devcontainers/features/node": {
      "nodeGypDependencies": false,
      "nvmVersion": "latest",
      "version": "latest",
      "installYarnUsingApt": false
    }
  },
  "postCreateCommand": "sh .devcontainer/install_tooling.sh",
  "runArgs": [
    "--cap-add=SYS_PTRACE",
    "--security-opt",
    "seccomp=unconfined"
  ],
  "customizations": {
    "vscode": {
      "settings": {
        "lldb.executable": "/usr/bin/lldb",
        "files.watcherExclude": {
          "**/target/**": true
        },
        "rust-analyzer.checkOnSave": true,
        "explorer.compactFolders": false,
        "rust-analyzer.inlayHints.implicitDrops.enable": true
      },
      "extensions": [
        "ms-azuretools.vscode-docker",
        "rust-lang.rust-analyzer",
        "fill-labs.dependi",
        "BytecodeAlliance.wit-idl",
        "tamasfe.even-better-toml",
        "vadimcn.vscode-lldb",
        "skellock.just",
        "opeolluwa.leptos",
        "masterustacean.leptos-fmt"
      ]
    }
  },
  "remoteUser": "vscode"
}